<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <LinearLayout
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_edit_name_tip"
            android:textSize="@dimen/dialog_text_normal_tip"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/taste_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:drawSelectorOnTop="true"
        android:prompt="@string/shop_edit_spinner_taste_prompt"/>

    <Spinner
        android:id="@+id/price_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taste_select"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:drawSelectorOnTop="true"
        android:prompt="@string/shop_edit_spinner_taste_prompt"/>

    <Spinner
        android:id="@+id/distance_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_select"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:drawSelectorOnTop="true"
        android:prompt="@string/shop_edit_spinner_taste_prompt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_select"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:gravity="center">
        <com.mi.FoodChoice.ui.CircleButton
            android:id="@+id/ok"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/ic_action_accept"
            app:cb_color="#33B5E5"
            app:cb_pressedRingWidth="8dip"/>
        <com.mi.FoodChoice.ui.CircleButton
            android:id="@+id/no"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_action_cancel"
            app:cb_color="#33B5E5"
            app:cb_pressedRingWidth="8dip"/>
    </LinearLayout>


</RelativeLayout>
